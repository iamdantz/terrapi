remote_state {
  <%_ if (provider === 'AWS') { -%>
  backend = "s3"
  generate = {
    path      = "backend.tf"
    if_exists = "overwrite_terragrunt"
  }
  config = {
    bucket         = "<%= projectName %>-terraform-state"
    key            = "${path_relative_to_include()}/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "<%= projectName %>-terraform-locks"
  }
  <%_ } else if (provider === 'Azure') { -%>
  backend = "azurerm"
  generate = {
    path      = "backend.tf"
    if_exists = "overwrite_terragrunt"
  }
  config = {
    resource_group_name  = "<%= projectName %>-tfstate-rg"
    storage_account_name = "<%= projectName %>tfstate"
    container_name       = "tfstate"
    key                  = "${path_relative_to_include()}/terraform.tfstate"
  }
  <%_ } else if (provider === 'GCP') { -%>
  backend = "gcs"
  generate = {
    path      = "backend.tf"
    if_exists = "overwrite_terragrunt"
  }
  config = {
    bucket = "<%= projectName %>-terraform-state"
    prefix = "${path_relative_to_include()}"
  }
  <%_ } -%>
}

generate "provider" {
  path      = "provider.tf"
  if_exists = "overwrite_terragrunt"
  contents  = <<EOF
provider "<%= provider === 'GCP' ? 'google' : provider.toLowerCase() %>" {
<%_ if (provider === 'AWS') { -%>
  region = "us-east-1"
<%_ } else if (provider === 'Azure') { -%>
  features {}
<%_ } else if (provider === 'GCP') { -%>
  project = "my-project-id"
  region  = "us-central1"
<%_ } -%>
}
EOF
}
